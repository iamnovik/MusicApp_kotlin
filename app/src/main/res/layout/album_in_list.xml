<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/albumlist_imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintDimensionRatio="h,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/albumslist_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Title"
        android:textColor="#EC0033"

        app:layout_constraintStart_toStartOf="@id/albumlist_imageView"
        app:layout_constraintTop_toTopOf="@id/albumlist_imageView" />

    <TextView
        android:id="@+id/albumlist_artist_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Artist"
        android:textColor="#EC0033"
        app:layout_constraintStart_toStartOf="@id/albumlist_imageView"
        app:layout_constraintTop_toBottomOf="@id/albumslist_title_textView" />

    <TextView
        android:id="@+id/albumslist_year_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Year"
        android:textColor="#EC0033"
        app:layout_constraintStart_toStartOf="@id/albumlist_imageView"
        app:layout_constraintTop_toBottomOf="@id/albumlist_artist_textView" />

    <Button
        android:id="@+id/button3"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_gravity="right"
        android:background="@drawable/favourite_no"
        app:layout_constraintBottom_toBottomOf="@id/albumlist_imageView"
        app:layout_constraintEnd_toEndOf="@id/albumlist_imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>